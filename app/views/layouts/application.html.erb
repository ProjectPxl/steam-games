<!DOCTYPE html>
<html>
<head>
  <title>TravelBooking</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= requirejs_include_tag 'main' %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if logged_in? %>
<%= link_to session[:current_user][:nickname], "/steam/#{session[:current_user][:id]}" %> <br>
<%= link_to 'sign out', signout_path%>

<% else %>

<%= link_to image_tag("http://cdn.steamcommunity.com/public/images/signinthroughsteam/sits_small.png"), 
    '/auth/steam' %>

<% end %>
<br>

